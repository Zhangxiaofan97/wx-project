 .borders{
  color: white;
 }
 .tab1,.tab2{
  width: 100%;
  height: 100%;
  position: relative;
 }
 .myBackground{
   width: 100%;
   height: 100%;
   position: absolute;
   top: 0;
   left: 0;
 }
 .myBackgroundView{
   width: 100%;
   height: 100%;
   position: absolute;
   top: 0;
   left: 0;
   padding: 0  6%;
   padding-top: 1%;
   box-sizing: border-box;
 }


  .myBackgroundViewInner1{
    height: 45%;
    width: 100%;

    border-radius: 10rpx;
    margin-bottom: 1.5%;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }
  .myBackgroundViewInner1Right{
    width: 35%;
    height: 100%;
    background-color: rgba(255,255, 255, 0.3);
    /* border: 1px solid red; */
    border-radius: 10rpx;
    box-sizing: border-box;
    display: flex;
  }

  .myBackgroundViewInner1Left{
    width: 55%;
    height: 70%;
    padding: 2% 4%;
    background-color: rgba(255,255,255,0.3);
    /* border: 1px solid red; */
    border-radius: 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box; 
  }
  .myBackgroundViewInner1LeftText{
    display: flex;
    flex-direction: column;
  }

  .myBackgroundViewInner1LeftTextTitle{
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  .myBackgroundViewInner1LeftImage{
    width: 80rpx;
    height: 80rpx;
  }







  .myBackgroundViewInner2{
    height: 49%;
    width: 100%;
    border-radius: 10rpx;
    background-color: rgba(255, 255, 255, .3);
    padding: 0% 5%;
    box-sizing: border-box;
  }

  .myBackgroundViewInner2TitleView{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 15rpx;
  }
  .myBackgroundViewInner2Title1{
    font-size: 36px;
  }
  .myBackgroundViewInner2TitleLevel{
    font-size: 48px;
    color: red;
    margin-left: 10rpx;
    margin-right: 10rpx;
  }
  
  .myBackgroundViewInner2Title2{
    font-size: 28px;
    color: white;
  }
  .myBackgroundViewInner2TitlePercent{
    font-size: 28px;
    color: red;
  }

  .myBackgroundViewInner2TitleView2{
    margin-top: 12rpx;
    display: flex;
    justify-content: center;
  }

  .myBackgroundViewInner2TitleView2Inner{
    background-color: black;
    display: flex;
    padding: 10rpx 40rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
  }
  .myBackgroundViewInner2TitleView2InnerText{
    font-size: 20px;
    color: white;
  }

  .myBackgroundView3{
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .myBackgroundViewInner3{
    width: 100%;
    height: 85%;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 20rpx;
    box-sizing: border-box;
    padding: 0% 5%;
    padding-bottom: 0%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }



  .myBackgroundViewInner3Inner{
    width: 100%;
    height: 72%;
    margin-bottom: 2%;
  }

  .myBackgroundViewInner3InnerView{
    background-color: white;
    border-radius: 50rpx;
    margin-bottom: 10rpx;
    display: flex;
    box-sizing: border-box;
    padding: 5rpx;
  }

  .myBackgroundViewInner3InnerViewText{
    text-align: center;
    font-size: 22px;
    font-weight: bold;
    margin-top: 1%;
  }

  .needBold{
    font-weight: bold;
  }






