
.body {
	width: 100vw;
	height: 100vh;
}
.swiper {
	height: 100vh;
}
.swiperImage {
	width: 100vw;
	height: 100vh;
}
.swiperIndicationPointBox {
	width: 100vw;
	height: 16rpx;
	position: absolute;
	bottom: 314rpx;
	display: flex;
	justify-content: center;
	z-index: 9999;
}
.indicationPoint {
	width: 16rpx;
	height: 16rpx;
	border-radius: 20rpx;
	background-color: #FFFFFF;
	margin-left: 14rpx;
}
.pitchOnindIcationPoint {
	width: 48rpx;
	border-radius: 10rpx;
	background-color: #EEEEEE;
}
.buttonBox {
	width: 100vw;
	height: 172rpx;
	position: absolute;
	bottom: 78rpx;
	display: flex;
}
.buttonBox2 {
	width: 148rpx;
	height: 100%;
	margin-left: 78rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.buttonBox2 image {
	width: 128rpx;
	height: 128rpx;
}
.buttonBox2 view {
	width: 100%;
	color: #FFFFFF;
	font-size: 30rpx;
	text-align: center;
}
.backButton {
	width: 87px;
  height: 32px;
  position: absolute;
  left: 6px;
	background-color: rgba(255, 255, 255, 0.60);
	z-index: 9999999;
	border-radius: 50rpx;
}
.backButton .back {
	width: 22rpx;
	height: 36rpx;
	position: absolute;
	left: 34rpx;
	top: 50%;
	-webkit-transform: translate(0%, -50%);
	        transform: translate(0%, -50%);
}
.backButton .backBox {
	width: 88rpx;
	height: 64rpx;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 9999999;
}
.backButton .segmentation {
	width: 1rpx;
	height: 37rpx;
	background-color: rgba(0, 0, 0, 0.20);
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
}
.backButton .backHome {
	width: 46rpx;
	height: 44rpx;
	position: absolute;
	right: 20rpx;
	top: 50%;
	-webkit-transform: translate(0%, -50%);
	        transform: translate(0%, -50%);
}
.backButton .backHomeBox {
	width: 84rpx;
	height: 64rpx;
	position: absolute;
	top: 0;
	right: 0;
	z-index: 9999999;
}
.course {
	width: 558rpx;
	height: 208rpx;
	position: absolute;
	top: 224rpx;
	left: 50%;
	-webkit-transform: translate(-50%, 0%);
	        transform: translate(-50%, 0%);
	background-color: rgba(0, 0, 0, 0.7);
	border-radius: 12rpx;
	z-index: 9999999;
}
.course .p {
	color: #FFFFFF;
	text-align: center;
  display: grid;
}

.course .p:first-child {
	font-size: 48rpx;
  margin-top: 40rpx;
  display: grid;
}

.course .p:last-child {
	font-size: 32rpx;
	margin-top: 27rpx;
}

